<Window x:Class="NutrCalc.ProfilesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NutrCalc"
        mc:Ignorable="d"
        Title="Profiles" Height="250" Width="200">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top" MinHeight="25" Margin="1">
            <Button Content="Select" Click="SelectButton_OnClick"/>
            <Button Content="Delete" Click="DeleteButton_OnClick"/>
        </ToolBar>
        <ListView x:Name="ProfilesPanel"/>
    </DockPanel>
</Window>
